<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:height="60.0dip" android:width="60.0dip" />
                    <solid android:color="#ffffeb29" />
                </shape>
            </item>
            <item
                android:left="15dp"
                android:right="15dp"
                android:bottom="15dp"
                android:top="15dp"
                android:drawable="@drawable/remote_mouse"></item>

        </layer-list>

    </item>

    <item>
        <layer-list>
            <item>

                <shape android:shape="oval">
                    <size android:height="60.0dip" android:width="60.0dip" />
                    <solid android:color="#ffffb016" />
                </shape>
            </item>
            <item
                android:left="15dp"
                android:right="15dp"
                android:bottom="15dp"
                android:top="15dp"
                android:drawable="@drawable/remote_mouse"></item>

        </layer-list>

    </item>
</selector>